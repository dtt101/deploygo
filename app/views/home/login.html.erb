<div id="primary">
	<div class="primary-content-header">
		<h1><%= image_tag("heading-signin.png", :alt => 'Sign in to your account', :height => '47', :width => '122') %></h1>
	<% form_tag do %>
		<dl>
			<div class="login-panel">
				<dt><label for="name">Email</label></dt>
				<dd><%= text_field_tag :name, params[:name] %></dd>		
				<dt class="login-panel-password"><label for="password">Password</label></dt>
				<dd><%= password_field_tag :password, params[:password] %>
				<span><%= link_to 'Forgotten password?', { :action => "forgotten" }, :class => 'highlight' %></span>
				</dd>
				<dd><%= submit_tag "Login", :class => 'button' %><dd>
			</div>
		<dl>
	<% end %>
	</div>
</div>
<div id="secondary">
	<%= render(:partial => 'logo') %>
	<div class="sidebar">
		<h3>Problems signing in?</h3>
		<p>Try our <a href="/home/support" class="highlight">support</a> pages or <a class="highlight" href="/home/contact">contact</a> us if you can't find an answer there.</p>
	</div>
	<%= render(:partial => 'subscribe') %>
</div>
