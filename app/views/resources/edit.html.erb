<div class="content">
<h1>Edit your resource</h1>

<% form_for(@resource) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => "large" %>
  </p>
  <div class="btn-area">
    <%= f.submit "Update" %>
  </div>
<% end %>
<p>
  <%= link_to '&lt; back to resources', resources_path %>
</p>
<div class="destroy">You can also <%= link_to 'delete this resource', @resource, :confirm => 'Are you sure? There is no going back!', :method => :delete %></div>
</div>
