<div class="content">
  <h1>Create a new team</h1>
  <p>Select which resources you'd like to be part of this team</p>

  <% form_for(@team) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name, :class => "large" %>
    </p>
    <div class="btn-area">
      <%= f.submit "Create" %>
    </div>
  <% end %>

<p>
<%= link_to '&lt; back to teams', teams_path %>
</p>
</div>